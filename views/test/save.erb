<!DOCTYPE html>
<%#include "test.h" %>
<% tfetch(QVariantMap, test); %>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= controller()->name() + ": " + controller()->activeAction() %></title>
</head>
<body>
<p style="color: red"><%=$ error %></p>
<p style="color: green"><%=$ notice %></p>

<h1>Editing Test</h1>

<%== formTag(urla("save", test["testId"]), Tf::Post) %>
  <p>
    <label>Test ID<br /><input type="text" name="test[testId]" value="<%= test["testId"] %>" readonly="readonly" /></label>
  </p>
  <p>
    <label>Input<br /><input type="text" name="test[input]" value="<%= test["input"] %>" /></label>
  </p>
  <p>
    <label>Output<br /><input type="text" name="test[output]" value="<%= test["output"] %>" /></label>
  </p>
  <p>
    <label>Problem ID<br /><input type="text" name="test[problemId]" value="<%= test["problemId"] %>" /></label>
  </p>
  <p>
    <input type="submit" value="Save" />
  </p>
</form>

<%== linkTo("Show", urla("show", test["testId"])) %> |
<%== linkTo("Back", urla("index")) %>
</body>
</html>
