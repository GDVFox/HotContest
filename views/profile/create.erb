<!DOCTYPE html>
<%#include "profile.h" %>
<% tfetch(QVariantMap, profile); %>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= controller()->name() + ": " + controller()->activeAction() %></title>
</head>
<body>
<p style="color: red"><%=$ error %></p>
<p style="color: green"><%=$ notice %></p>

<h1>New Profile</h1>

<%== formTag(urla("create"), Tf::Post) %>
  <p>
    <label>First Name<br /><input name="profile[firstName]" value="<%= profile["firstName"] %>" /></label>
  </p>
  <p>
    <label>Last Name<br /><input name="profile[lastName]" value="<%= profile["lastName"] %>" /></label>
  </p>
  <p>
    <label>Nickname<br /><input name="profile[nickname]" value="<%= profile["nickname"] %>" /></label>
  </p>
  <p>
    <label>Email<br /><input name="profile[email]" value="<%= profile["email"] %>" /></label>
  </p>
  <p>
    <label>Password<br /><input name="profile[password]" value="<%= profile["password"] %>" /></label>
  </p>
  <p>
    <label>Date Joined<br /><input name="profile[dateJoined]" value="<%= profile["dateJoined"] %>" /></label>
  </p>
  <p>
    <label>Is Active<br /><input name="profile[isActive]" value="<%= profile["isActive"] %>" /></label>
  </p>
  <p>
    <input type="submit" value="Create" />
  </p>
</form>

<%== linkTo("Back", urla("index")) %>

</body>
</html>
